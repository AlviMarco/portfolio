<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="accent">#00bfa5</color>
    <color name="ic_launcher_background">#0066d9</color>
    <color name="ic_launcher_foreground">#ffffff</color>
    <color name="primary">#0066d9</color>
    <color name="primary_dark">#003d7a</color>
    <dimen name="activity_horizontal_margin">16dp</dimen>
    <dimen name="activity_vertical_margin">16dp</dimen>
    <dimen name="app_bar_height">56dp</dimen>
    <dimen name="fab_margin">16dp</dimen>
    <dimen name="text_margin">16dp</dimen>
    <string name="action_settings">Settings</string>
    <string name="app_name">Hisab Pati</string>
    <string name="app_version">1.0.0</string>
    <string name="company_name">Hisab Pati - Smart Accounting</string>
    <style name="Theme.HisabPati" parent="Theme.AppCompat.Light.DarkActionBar">
        
        <item name="colorPrimary">@color/ic_launcher_background</item>
        <item name="colorPrimaryVariant">#003d7a</item>
        <item name="colorSecondary">@color/ic_launcher_background</item>
        <item name="colorSecondaryVariant">#018786</item>
        
        
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">false</item>
        
        
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:fitsSystemWindows">true</item>
        
        
        <item name="android:navigationBarColor">?attr/colorPrimary</item>
        <item name="android:windowLightNavigationBar">false</item>
        
        
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
    </style>
    <style name="Theme.HisabPati.Splash" parent="Theme.HisabPati">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>